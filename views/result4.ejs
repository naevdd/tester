<!DOCTYPE html>
<html>
    <head>
        <title>Search Results 4</title>
        <meta charset="utf-8">
        <style>
            body{
                font-family:monospace;
                font-size: 30px;
                text-align: center;
            }
            table{
                margin:auto;
            }
        </style>
    </head>
    <body>
        <% if (query) { %>
            <h2>Search Results</h2>
            <p>You searched for: <strong><%= query %></strong></p>
        <% } %>
    
        <h3>Search History</h3>
        <% if (rows.length > 0) { %>
            <table border="5">
                <thead>
                    <tr>
                        <th>Search String</th>
                        <th>Date Time (IST)</th>
                        <th>IP Address</th>
                        <th>Browser</th>
                    </tr>
                </thead>
                <tbody>
                    <% rows.forEach(function(row) { %>
                        <tr>
                            <% row.forEach(function(cell) { %>
                                <td><%= cell %></td>
                            <% }) %>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
    
            <div>
                <% if (page > 1) { %>
                    <form action="/exercise-4/result4?page=<%= page - 1 %>" method="POST">
                        <button>Previous</button>
                    </form>
                <% } %>
                <% if (page < totalPages) { %>
                     <form action="/exercise-4/result4?page=<%= page + 1 %>" method="POST">
                        <button>Next</button>
                    </form>
                <% } %>                
            </div>
        <% } else { %>
            <p>No search history available.</p>
        <% } %>
        <form action="/clear-history" method="post">
            <input type="hidden" name="clear" value=true>
            <button>Clear History</button>
        </form>
        <p><a href="/exercise-4">Go back to search page</a></p>
        <p><a href="/">Home</a></p>
    </body>
</html>